<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <record id="view_hr_employee_travel_form" model="ir.ui.view">
      <field name="name">hr.employee.travel.expense</field>
      <field name="model">hr.employee</field>
      <field name="inherit_id" ref="hr.view_employee_form"/>
      <field name="arch" type="xml">
        <field name="user_id" position="after">
          <field name="expense_sequence_id"/>
        </field>
      </field>
    </record>

    <record id="view_hr_expense_travel_form" model="ir.ui.view">
      <field name="name">hr.employee.expense</field>
      <field name="model">hr.expense</field>
      <field name="inherit_id" ref="hr_expense.hr_expense_form_view"/>
      <field name="arch" type="xml">
        <field name="unit_amount" position="attributes">
          <attribute name="invisible">True</attribute>
        </field>
        <field name="unit_amount" position="before">
            <field name="untaxed_amount" widget="monetary"/>
            <field name="unit_amount_untaxed" widget="monetary"/>
        </field>
      </field>
    </record>
  </data>
</openerp>
